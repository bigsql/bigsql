
OS=`uname`

function runCmd () {
  echo "#"
  echo "# $1"
  $1
  RC=$?
  if [ ! "$RC" == "0" ]; then
    echo "ERROR: rc=$RC"
    exit $RC
  fi
}

runCmd "sudo yum install libvirt qemu-kvm"
runCmd "sudo usermod -a -G libvirt $(whoami)"

GITVER=https://github.com/dhiltgen/docker-machine-kvm/releases/download/v0.10.0
DRIVER=docker-machine-driver-kvm
runCmd "sudo curl -L $GITVER/$KVM_DRIVER-centos7 -o /usr/local/bin/$KVM_DRIVER"
runCmd "sudo chmod +x /usr/local/bin/$KVM_DRIVER"

runCmd "sudo systemctl enable libvirtd"
runCmd "sudo systemctl start libvirtd"
