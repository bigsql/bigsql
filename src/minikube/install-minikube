
OS=`uname`

function runCmd () {
  echo "#"
  echo "# $1"
  $1
  RC=$?
  if [ ! "$RC" == "0" ]; then
    echo "ERROR: rc=$RC"
    exit $RC
  fi
}

cd "$(dirname "$0")"
runCmd "curl -Lo minikube https://storage.googleapis.com/minikube/releases/latest/minikube-linux-amd64"
runCmd "chmod +x minikube"
runCmd "sudo install minikube /usr/local/bin"
runCmd "rm minikube"
